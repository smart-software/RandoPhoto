<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@android:style/Theme.NoTitleBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color"
                android:gravity="center">
  
  <!-- Logo Text. Use image instead of label -->
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logolayout"
        android:weightSum="10">
    <Space
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1.5"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/rando_logo"
        android:id="@+id/ivLogo"
        android:layout_weight="7"/>
    <Space
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1.5"/>
  </LinearLayout>

  <!-- Email text edit -->
  <TextView
    android:id="@+id/lEmail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/logolayout"
    android:layout_alignLeft="@+id/etEmail"
    android:layout_marginTop="10dp"
    android:text="@string/email_text"/>
  <EditText
    android:id="@+id/etEmail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/lEmail"
    android:layout_centerHorizontal="true"
    android:ems="10">
    <requestFocus />
  </EditText>
  <!-- End of email text edit -->

  <!-- Password text edit -->
  <TextView
    android:id="@+id/lPassword"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/etEmail"
    android:layout_alignLeft="@+id/lEmail"
    android:layout_marginTop="3dp"
    android:text="@string/password_text" />
  <EditText
    android:id="@+id/etPassword"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/lPassword"
    android:layout_alignLeft="@+id/lEmail"
    android:ems="10" />
  <!-- End of password text edit -->

  <!-- Buttons: Login, Register -->
  <Button
    android:id="@+id/btnLogin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/etPassword"
    android:layout_alignLeft="@+id/etEmail"
    android:layout_alignRight="@+id/etEmail"
    android:layout_marginTop="10dp"
    android:text="@string/login_text" />
  <Button
    android:id="@+id/btnRegister"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btnLogin"
    android:layout_alignLeft="@+id/etEmail"
    android:layout_alignRight="@+id/etEmail"
    android:layout_marginTop="5dp"
    android:text="@string/register_text" />
  <!-- End of Buttons -->

</RelativeLayout>